{
  "manifest_version": 3,
  "name": "Cours Filter — sessions visibles uniquement",
  "version": "1.3.0",
  "description": "Filtrer/Défiltrer les cartes selon la présence d’une session (exactement comme en console).",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_title": "Filtrer les cours",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.ulaval.ca/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "cours-filter@exemple.tld",
      "strict_min_version": "109.0"
    }
  }
}
